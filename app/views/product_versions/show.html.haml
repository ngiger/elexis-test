%title "Product Version"

%strong
  = (I18n.t :version) + ':'
= @product_version.name
%br
%strong 
  = (I18n.t :description) + ':'
= @product_version.description
%br
%strong
  = (I18n.t :remarks) + ':'
= raw RedCloth.new(@product_version.remarks).to_html
%br
%strong 
  User:
= User.find(@product_version.user_id).email

%p
  = link_to "Edit", edit_product_version_path(@product_version)
  |
  = link_to "Destroy", @product_version, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", product_versions_path
