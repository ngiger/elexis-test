%h1 Edit user
= form_for(@user) do |f|
  = render 'shared/error_messages', :object => f.object
  %div{:class=>"field"}
  = f.label :name
  = f.text_field :name
  %div{:class=>"field"}
  = f.label :email
  = f.text_field :email
  %div{:class=>"field"}
  = f.label :password
  = f.password_field :password
  %div{:class=>"field"}
  = f.label :password_confirmation, "Confirmation"
  = f.password_field :password_confirmation
  %div{:class=>"actions"}
  = f.submit  "Update"
%div
  %br
  = gravatar_for @user
  = link_to 'change', "http://gravatar.com/emails"
